{
	"name": "stijnklomp-linting-formatting-config",
	"description": "Linting and formatting configuration for Typescript projects using typescript-eslint.",
	"version": "7.0.0",
	"author": "stijnklomp",
	"license": "MIT",
	"main": "eslintRules.js",
	"private": false,
	"scripts": {
		"build:declaration": "tsc -p declaration.tsconfig.json",
		"build:add-ignores": "ts-ignore-import '**/*.d.ts' --allow=eslint --allow=neostandard",
		"build": "npm run clean && npm run build:declaration && npm run build:add-ignores",
		"lint": "eslint --report-unused-disable-directives .",
		"clean": "rm -rf $(find . -maxdepth 2 -type f -name '*.d.ts*')",
		"prepare": "husky",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/stijnklomp/linting-formatting-config.git"
	},
	"files": [
		".editorconfig",
		"eslintRules.js",
		"jestRules.js",
		"prettier/prettier.js",
		"prettier/prettierRules.js",
		"reactRules.js",
		"stylelint/stylelint.js",
		"stylelint/stylelintRules.js",
		"typedoc.json",
		"typescript/tsconfig.base.json",
		"typescript/typescriptRules.js"
	],
	"dependencies": {
		"eslint": "^9.x",
		"neostandard": "*",
		"typescript-eslint": "^8.x"
	},
	"devDependencies": {
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-markdown": "^5.1.0",
		"eslint-plugin-yml": "^1.14.0"
	},
	"peerDependencies": {
		"@types/jest": "*",
		"eslint-plugin-import": "*",
		"eslint-plugin-jest": "*",
		"eslint-plugin-jsx-a11y": "*",
		"eslint-plugin-prettier": "*",
		"eslint-plugin-react": "*",
		"eslint-plugin-react-hooks": "*",
		"typescript": ">=5.x"
	},
	"peerDependenciesMeta": {
		"eslint-plugin-jest": {
			"optional": true
		},
		"eslint-plugin-jsx-a11y": {
			"optional": true
		},
		"eslint-plugin-react": {
			"optional": true
		},
		"eslint-plugin-react-hooks": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"bugs": {
		"url": "https://github.com/stijnklomp/linting-formatting-config/issues"
	},
	"homepage": "https://github.com/stijnklomp/linting-formatting-config#readme"
}
